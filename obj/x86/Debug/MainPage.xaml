<Page x:ConnectionId='1'
    x:Class="newSoundBoard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:newSoundBoard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:newSoundBoard.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid x:ConnectionId='2' Name="main_grid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="auto_suggestbox.Width" Value="300"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel >
            <Button x:ConnectionId='25' Name="list_button"
                    RelativePanel.AlignLeftWithPanel="True"
                    Height="45"
                    Width="45"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE71D;" 
                    FontSize="30"       
                    Foreground="White"
                                             />
            <Button x:ConnectionId='26' Name="back_button"
                    RelativePanel.RightOf="list_button"
                    Height="45"
                    Width="45"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE0A6;"
                    Margin="5,0,0,0"
                    FontSize="30"
                    Foreground="White"
                                             />
            <TextBlock x:ConnectionId='27' Name="type_textblock"
                       FontSize="25"
                       FontWeight="SemiBold"
                       FontStyle="Italic"
                       Foreground="Black"
                       RelativePanel.RightOf="back_button"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       Margin="30,0,0,0"/>
            <AutoSuggestBox x:ConnectionId='28' Name="auto_suggestbox"
                        RelativePanel.AlignRightWithPanel="True"
                        Width="200"
                        Margin="0,0,10,0"
                        QueryIcon="Find"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                        PlaceholderText="Search for Sounds"
                                                                 
                                                                       />
        </RelativePanel>
        <SplitView x:ConnectionId='3' Name="main_splitview"
                   Grid.Row="1"
                   DisplayMode="CompactInline"
                   IsPaneOpen="False"
                   CompactPaneLength="45"
                   OpenPaneLength="160">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListView x:ConnectionId='4' Name="main_listview"
                          IsItemClickEnabled="True"
                          SelectionMode="Single"
                                                          
                                                             >
                        <ListView.ItemTemplate>
                            <DataTemplate                       >
                                <StackPanel x:ConnectionId='10' Orientation="Horizontal"
                                        Height="70">
                                    <Image x:ConnectionId='11' Height="40"
                                       Width="40"
                                       Margin="-10,0,0,0"
                                       VerticalAlignment="Center"
                                                                 />
                                    <TextBlock x:ConnectionId='12' Name="animal_textblock" 
                                                                       
                                               FontSize="20"
                                               Margin="20,0,0,0"
                                               FontStyle="Italic"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListBox x:ConnectionId='5' Grid.Row="1"
                             Name="main_listbox"
                                                         >
                        <ListBoxItem x:ConnectionId='6' Name="listbox_itemfeedback"
                                     Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets "
                                           Text="&#xED15;"
                                           FontSize="25"
                                           Foreground="White"
                                           Margin="-2,0,0,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:ConnectionId='9' Name="feedback_textblock"
                                           Text="FeedBack"
                                           FontSize="20"
                                           Margin="26,0,0,0"
                                           FontStyle="Italic"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='7' Name="listbox_itemSetting">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Assets/Icons/setting.png"
                                       Height="40"
                                       Width="40"
                                       Margin="-10,0,0,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock x:ConnectionId='8' Name="setting_textblock"
                                           Text="Setting"
                                           FontSize="20"
                                           Margin="20,0,0,0"
                                           FontStyle="Italic"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <MediaElement x:ConnectionId='13' AutoPlay="True"
                                  Name="media_element"/>
                    <StackPanel x:ConnectionId='14' Name="combobox_stackPanel">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='23' Name="background_textblock" 
                                       Text="BackGround Color"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:ConnectionId='24' Name="main_combobox"
                                  Width="150"
                                  Margin="20,0,0,0"
                                  HorizontalContentAlignment="Center"
                                                                                     >
                                <ComboBoxItem Content="Gray"/>
                                <ComboBoxItem Content="Red"/>
                                <ComboBoxItem Content="DimGray"/>
                                <ComboBoxItem Content="SkyBlue"/>
                                <ComboBoxItem Content="LightBlue"/>
                                <ComboBoxItem Content="Brown"/>
                                <ComboBoxItem Content="DeepPink"/>
                            </ComboBox>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='21' Name="Opacity_textblock"
                                   FontSize="20"
                                       Foreground="White"
                                   FontWeight="Bold"
                                   Text="Opacity"/>
                            <Slider x:ConnectionId='22' Name="setting_slider"
                                    Margin="20,0,0,0"
                                    Height="50"
                                    Width="200"
                                    Maximum="1"
                                    Minimum="0"
                                    StepFrequency="0.01"
                                                                              />
                        </StackPanel>
                        
                        <!--<ColorPicker x:Name="myColorPicker"
                                     ColorSpectrumShape="Box"
                                     IsAlphaEnabled="True"
                                     IsColorChannelTextInputVisible="False"
                                     IsAlphaTextInputVisible="False"
                                     HorizontalAlignment="Center"
                                     ColorChanged="myColorPicker_ColorChanged"/>-->
                        <!--<StackPanel Orientation="Horizontal">
                            <TextBlock Name="foreground_textblock" 
                                       Text="Foreground Color"
                                       FontSize="20"
                                       Foreground="White"
                                       Margin="5,10,0,0"
                                       VerticalAlignment="Center"/>
                            <ComboBox Name="foreground_combobox"
                                  Width="150"
                                  Margin="34,10,0,0"
                                  HorizontalContentAlignment="Center"
                                  SelectionChanged="foreground_combobox_SelectionChanged">
                                <ComboBoxItem Content="Gray"/>
                                <ComboBoxItem Content="Red"/>
                                <ComboBoxItem Content="DimGray"/>
                                <ComboBoxItem Content="SkyBlue"/>
                                <ComboBoxItem Content="LightBlue"/>
                                <ComboBoxItem Content="Yellow"/>
                                <ComboBoxItem Content="DeepPink"/>
                            </ComboBox>

                        </StackPanel>-->
                        <Button x:ConnectionId='18' Name="content_button"
                                Height="50"
                                Width="100"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="WhiteSmoke"
                                Content="About"
                                Margin="0,30,0,0"
                                HorizontalAlignment="Center"
                                                          />
                        <TextBlock x:ConnectionId='19' Name="github_textblock"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   FontStyle="Italic"
                                   Margin="0,30,0,0" 
                                   Foreground="WhiteSmoke"
                                   HorizontalAlignment="Center"
                                   Text="Project Url:"/>
                        <TextBlock x:ConnectionId='20' Name="uri_textblock"
                                   FontSize="15"
                                   FontStyle="Italic"
                                   Margin="5" 
                                   Foreground="WhiteSmoke"
                                   IsTextSelectionEnabled="True"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Text="https://github.com/singhwong/UWP-SoundBoard"/>
                    </StackPanel>


                    <TextBlock x:ConnectionId='15' Name="main_textblock"
                               Text="All Sounds"
                               FontSize="50"
                               FontStyle="Italic"
                               Foreground="White"
                               Grid.Row="1"/>
                    <GridView x:ConnectionId='16' Name="main_gridview"
                              SelectionMode="None"
                              IsItemClickEnabled="True"                             
                                                               
                              AllowDrop="True"
                                                       
                                                               
                              Grid.Row="2"
                                                                 >
                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <local:MyUserControl1/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

